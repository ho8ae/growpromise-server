FROM node:18-alpine

WORKDIR /app

# OpenSSL 1.1 설치 (핵심 수정)
RUN apk add --no-cache openssl1.1-compat

# 패키지 파일 복사 및 의존성 설치
COPY package*.json ./
RUN npm install
RUN npm install -g prisma

# 소스 파일 복사
COPY . ./

# Prisma Client 생성 (linux-musl용)
RUN npx prisma generate

# 빌드
RUN npm run build

EXPOSE 3000

CMD ["node", "dist/server.js"]
